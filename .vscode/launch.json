    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/Nodejs-backend/main.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },

        {
            "type": "node",
            "request": "attach",
            "name": "Attach",
            "smartStep": true,
            "address": "localhost",
            "port": 9229,
            "restart": true,
            "localRoot": "${workspaceFolder}/Nodejs-backend",
            "remoteRoot": "${workspaceFolder}/Nodejs-backend",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}